<style>
  .card:hover { transform: scale(1.02); transition: 0.3s; }
</style>

<%- layout('/layouts/boilerplate') %>

<div class="container my-4">
  <div class="row g-4">
    <% for(let feedback of allFeedbacks) { %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card shadow-sm h-100" style="border-radius: 16px;">
          <div class="card-body">
            <!-- Student Name -->
            <h5 style="color: black;">@<%= feedback.owner.studentName %></h5>
            
            <!-- Room No. -->
            <h6 class="card-subtitle mb-2 text-muted">Room No. <%= feedback.owner.roomNumber %></h6>

            <!-- Meal Type -->
            <span class="badge bg-success mb-2">Meal: <%= feedback.mealType %></span>

            <!-- Rating -->
            <p class="mb-1">
              <strong>Rating:</strong> 
              <%= '★'.repeat(feedback.rating) + '☆'.repeat(5 - feedback.rating) %>
              (<%= feedback.rating %>/5)
            </p>

            <!-- Comment -->
            <p class="card-text"><%= feedback.comment %></p>

            <!-- Date and Time -->
            <p class="text-muted small mb-0">
              <%= new Date(feedback.date).toLocaleString('en-US', { 
                day: 'numeric', month: 'long', year: 'numeric', 
                hour: '2-digit', minute: '2-digit', hour12: true 
              }) %>
            </p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
