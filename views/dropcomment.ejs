 
<%- layout('/layouts/boilerplate') %>


<div class="container mt-5 mb-5 d-flex justify-content-center">
  <form action="/api/admin/dropcomment" method="POST" class="w-100" style="max-width: 500px; border: 1.5px solid black; padding: 30px; border-radius: 16px; background: white;">
    <h2 class="text-center mb-4" style="font-family: 'Playfair Display', serif; font-weight: 600;">Drop a Comment</h2>

    <div class="mb-3">
      <label for="post" class="form-label">Post</label>
      <select id="post" name="post" class="form-select" required style="border: 1px solid black;">
        <option value="">-- Select Post --</option>
        <option value="porvost">Porvost</option>
        <option value="warden">Warden</option>
        <option value="sr. Warden">Sr. Warden</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="hostel" class="form-label">Hall / Hostel</label>
      <input type="text" id="hostel" name="hostelName" class="form-control" placeholder="e.g. Hall-3" required style="border: 1px solid black;">
    </div>

    <div class="mb-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea id="comment" name="comment" rows="5" class="form-control" placeholder="Write your feedback here..." required style="border: 1px solid black;"></textarea>
    </div>

    <button type="submit" class="btn w-100" style="background-color: black; color: white; border-radius: 30px; font-weight: 600;">Submit Comment</button>
  </form>
</div>


  