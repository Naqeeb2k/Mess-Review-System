<%- layout('/layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="col-12 col-sm-10 col-md-6 col-lg-5 col-xl-4 p-4 border border-dark rounded-4 shadow-sm bg-white">
    <h4 class="text-center mb-4" style="font-family: 'Playfair Display', serif; letter-spacing: 1px; font-weight: 600; color: #111;">
      Edit Admin Details
    </h4>

    <form action="/api/admin/<%= adminDetails._id %>/edit?_method=PUT" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label" style="font-weight: 500; color: #222;">Admin Name</label>
        <input
          type="text"
          name="adminName"
          class="form-control border-dark rounded-2"
          placeholder="e.g. John Smith"
          value="<%= adminDetails.adminName %>"
          required
        />
        <div class="invalid-feedback">Please Enter Admin Name</div>
      </div>

      <div class="mb-3">
        <label class="form-label" style="font-weight: 500; color: #222;">Hostel Name</label>
        <input
          type="text"
          name="hostelName"
          class="form-control border-dark rounded-2"
          placeholder="e.g. Hostel A"
          value="<%= adminDetails.hostelName %>"
          required
        />
        <div class="invalid-feedback">Please Enter Hostel Name</div>
      </div>

      <button
        type="submit"
        class="btn w-100 py-2"
        style="background-color: black; color: white; font-weight: 500; letter-spacing: 0.5px; border-radius: 2rem;"
      >
        Update Admin
      </button>
    </form>
  </div>
</div>
