<%- layout('/layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="w-100" style="max-width: 420px;">
    <div class="p-4 p-md-5 border border-dark rounded-4 shadow-sm bg-white">
      <h4 class="text-center mb-4" style="font-family: 'Playfair Display', serif; letter-spacing: 1px; font-weight: 600; color: #111;">
        Admin Login
      </h4>

      <form action="/api/admin/dashboard" method="post" class="needs-validation" novalidate>
        <div class="mb-4">
          <label for="adminName" class="form-label" style="font-weight: 500; color: #222;">Admin Name</label>
          <input
            type="text"
            class="form-control border-dark rounded-2"
            id="adminName"
            name="adminName"
            placeholder="John Doe"
            required
          />
          <div class="invalid-feedback">Enter Admin Name</div>
        </div>

        <div class="mb-4">
          <label for="password" class="form-label" style="font-weight: 500; color: #222;">Password</label>
          <input
            type="password"
            class="form-control border-dark rounded-2"
            id="password"
            name="password"
            placeholder="••••••••"
            required
          />
          <div class="invalid-feedback">Enter the Password</div>
        </div>

        <button
          type="submit"
          class="btn w-100 py-2"
          style="background-color: black; color: white; font-weight: 500; letter-spacing: 0.5px; border-radius: 2rem;"
        >
          Login
        </button>
      </form>
    </div>
  </div>
</div>
