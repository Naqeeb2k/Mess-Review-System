<%- layout('/layouts/boilerplate') %>
 
   <div class="container my-4">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% comments.forEach(comment => { %>
      <div class="col">
        <div class="card shadow-sm h-100 rounded-4">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h6 class="mb-0 text-primary fw-semibold">@<%= comment.post %></h6>
              <span class="badge bg-dark text-white px-2 py-1"><%= comment.hostelName %></span>
            </div>
            <p class="text-secondary mb-3" style="font-size: 15px;"><%= comment.comment %></p>
            <small class="text-muted">
              <%= new Date(comment.date).toLocaleString('en-IN', {
                day: 'numeric',
                month: 'long',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                hour12: true
              }) %>
            </small>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

